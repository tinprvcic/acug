<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./shared/head') -%>
    <link rel="stylesheet" href="/orders.css" />
  </head>

  <body>
    <%- include('./shared/nav_header') -%>

    <div class="main-content">
      <div class="title-row">
        <h1>Nardužbe</h1>
      </div>

      <div class="order-list">
        <% orders.forEach((o) => { %>
        <div class="order-list-item">
          <div>
            <h4>Narudžba #<%= o.order_id %></h4>

            <div class="article-list">
              <% if (!o.articles.length) { %>
              <p>Nema artikala u ovoj narudžbi.</p>
              <% } %> <% o.articles.forEach((a) => { %>

              <p><%= a.article_name %> x<%= a.quantity %></p>
              <% }); %>
            </div>
          </div>

          <div class="order-list-item-right">
            <% if (o.status === "paid") { %>
            <p class="order-list-item-status">Plaćeno</p>
            <% } %> <% if (o.status === "pending") { %>
            <form
              action="<%= `/orders/${o.order_id}/take` %>"
              method="post"
              class="mb-12"
            >
              <input type="submit" value="Prihvati" />
            </form>
            <% } %> <% if (o.status === "accepted") { %>
            <form
              action="<%= `/orders/${o.order_id}/deliver` %>"
              method="post"
              class="mb-12"
            >
              <input type="submit" value="Označi kao isporučeno" />
            </form>
            <% } %> <% if (o.status === "delivered") { %>
            <form
              action="<%= `/orders/${o.order_id}/markPaid` %>"
              method="post"
              class="mb-12"
            >
              <input type="submit" value="Označi kao plaćeno" />
            </form>
            <% } %>

            <p class="order-list-item-price">
              <%= (o.articles.reduce((acc, a) => acc + (a.article_price *
              a.quantity), 0) / 100).toFixed(2) %>&#8364;
            </p>
          </div>
        </div>
        <% }); %>
      </div>
    </div>
  </body>
</html>
